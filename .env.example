# Circle App Environment Configuration Template
# Copy this file to .env and update the values as needed

# Environment Mode (development | production)
NODE_ENV=development

# Development Configuration (localhost)
DEV_API_BASE_URL=http://localhost:8080
DEV_WS_BASE_URL=http://localhost:8080
DEV_FRONTEND_URL=http://localhost:8081

# Production Configuration (deployed)
PROD_API_BASE_URL=https://your-api-domain.com
PROD_WS_BASE_URL=https://your-api-domain.com
PROD_FRONTEND_URL=https://your-frontend-domain.com

# Public Environment Variables (auto-selected based on NODE_ENV)
# These will be automatically set by the API configuration
EXPO_PUBLIC_API_BASE_URL=https://your-api-domain.com
EXPO_PUBLIC_WS_BASE_URL=https://your-api-domain.com
EXPO_PUBLIC_FRONTEND_URL=https://your-frontend-domain.com

# Third-party Services
EXPO_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id

# Google OAuth Configuration
EXPO_PUBLIC_GOOGLE_CLIENT_ID_IOS=your_google_client_id_ios
EXPO_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=your_google_client_id_android
EXPO_PUBLIC_GOOGLE_CLIENT_ID_WEB=your_google_client_id_web

# Development Override (uncomment to force development mode)
# FORCE_DEV_MODE=true
